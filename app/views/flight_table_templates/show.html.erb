<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Flight table #<%= @flight_table.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/flight_tables" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @flight_table.user %>
          <a href="/flight_tables/<%= @flight_table.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit flight_table
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @flight_table.user %>
          <a href="/delete_flight_table/<%= @flight_table.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete flight_table
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Description
      </dt>
      <dd>
        <%= @flight_table.description %>
      </dd>

      <dt>
        Time
      </dt>
      <dd>
        <%= @flight_table.time %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @flight_table.user.present? %>
          <a href="/users/<%= @flight_table.user_id %>">
            <%= @flight_table.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@flight_table.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@flight_table.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

