<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All flight tables
    </h1>

    <a href="/flight_tables/new" class="btn btn-block btn-outline-secondary">
      Add a new flight table
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "flight_table_templates/flight_tables_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Time
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @flight_tables.each do |flight_table| %>
      <tr>
        <td>
          <%= flight_table.id %>
        </td>

        <td>
          <%= flight_table.description %>
        </td>

        <td>
          <%= flight_table.time %>
        </td>

        <td>
          <% if flight_table.user.present? %>
            <a href="/users/<%= flight_table.user.id %>">
              <%= flight_table.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(flight_table.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(flight_table.updated_at) %> ago
        </td>

        <td>
          <a href="/flight_tables/<%= flight_table.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @flight_tables, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
