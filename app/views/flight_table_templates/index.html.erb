<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All flight tables
    </h1>

    <a href="/flight_tables/new" class="btn btn-block btn-outline-secondary">
      Add a new flight table
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Time
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @flight_tables.each do |flight_table| %>
      <tr>
        <!-- Display flight_table.id start -->
        <td>
          <%= flight_table.id %>
        </td>
        <!-- Display flight_table.id end -->

        <!-- Display flight_table.description start -->
        <td>
          <%= flight_table.description %>
        </td>
        <!-- Display flight_table.description end -->

        <!-- Display flight_table.time start -->
        <td>
          <%= flight_table.time %>
        </td>
        <!-- Display flight_table.time end -->

        <!-- Display flight_table.user_id start -->
        <td>
          <%= flight_table.user.email %>
        </td>
        <!-- Display flight_table.user_id end -->

        <!-- Display flight_table.created_at start -->
        <td>
          <%= time_ago_in_words(flight_table.created_at) %> ago
        </td>
        <!-- Display flight_table.created_at end -->

        <!-- Display flight_table.updated_at start -->
        <td>
          <%= time_ago_in_words(flight_table.updated_at) %> ago
        </td>
        <!-- Display flight_table.updated_at end -->

        <td>
          <a href="/flight_tables/<%= flight_table.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
